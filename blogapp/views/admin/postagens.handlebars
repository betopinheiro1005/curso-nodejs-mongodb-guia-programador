<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p class="mt-3"><strong>Slug:</strong> {{slug}} | <strong>Categoria:</strong> {{categoria.nome}} | <strong>Data
                de criação:</strong>
            {{data}}</p>
        <p>Descrição: {{descricao}}</p>
        <p>Conteúdo: {{conteudo}}</p>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
        <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar</button></a>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma postagem registrada!</h4>
{{/each}}